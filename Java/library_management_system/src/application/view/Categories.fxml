<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.CategoryController">
   <children>
      <ScrollPane layoutX="275.0" layoutY="42.0" prefHeight="350.0" prefWidth="400.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="350.0" prefWidth="400.0">
               <children>
                  <TableView fx:id="tbl_category" prefHeight="340.0" prefWidth="390.0">
                    <columns>
                      <TableColumn fx:id="col_id" prefWidth="100.0" text="Id" />
                      <TableColumn fx:id="col_name" prefWidth="285.0" text="Name" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <TextField fx:id="txt_name" layoutX="25.0" layoutY="100.0" prefHeight="35.0" prefWidth="225.0" promptText="Category Name" />
      <Button layoutX="100.0" layoutY="175.0" mnemonicParsing="false" onAction="#btn_add_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #007508;" text="Add" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="100.0" layoutY="225.0" mnemonicParsing="false" onAction="#btn_update_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #7d5504;" text="Update" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="100.0" layoutY="275.0" mnemonicParsing="false" onAction="#btn_search_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #9719b0;" text="Search" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="100.0" layoutY="325.0" mnemonicParsing="false" onAction="#btn_delete_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #e62020;" text="Delete" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="600.0" layoutY="540.0" mnemonicParsing="false" onAction="#btn_back_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #0062ff;" text="Back" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
