<AnchorPane fx:controller="application.controller.LibrarianController" prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane layoutX="375.0" layoutY="25.0" prefHeight="400.0" prefWidth="400.0">
        <content>
          <AnchorPane layoutX="375.0" layoutY="25.0" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="400.0">
               <children>
                  <TableView fx:id="tbl_librarian" prefHeight="400.0" prefWidth="400.0">
                    <columns>
                      <TableColumn fx:id="col_id" prefWidth="100.0" text="Id" />
                      <TableColumn fx:id="col_name" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="col_password" prefWidth="150.0" text="Password" />
                    </columns>
                  </TableView>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
      <Label layoutX="25.0" layoutY="75.0" prefHeight="35.0" text="Id">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txt_id" layoutX="125.0" layoutY="75.0" prefHeight="35.0" prefWidth="200.0" promptText="Id" />
      <Label layoutX="25.0" layoutY="150.0" prefHeight="35.0" text="Name">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="25.0" layoutY="225.0" prefHeight="35.0" text="Password">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txt_name" layoutX="125.0" layoutY="150.0" prefHeight="35.0" prefWidth="200.0" promptText="Name" />
      <PasswordField fx:id="txt_password" layoutX="125.0" layoutY="225.0" prefHeight="35.0" prefWidth="200.0" promptText="Password" />
      <Button layoutX="25.0" layoutY="300.0" mnemonicParsing="false" onAction="#btn_add_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #007508;" text="Add" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="249.0" layoutY="300.0" mnemonicParsing="false" onAction="#btn_delete_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #e62020;" text="Delete" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="699.0" layoutY="491.0" mnemonicParsing="false" onAction="#btn_search_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #9719b0;" text="Search" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="137.5" layoutY="300.0" mnemonicParsing="false" onAction="#btn_edit_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #a37302;" text="Edit" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <TextField fx:id="txt_search" layoutX="375.0" layoutY="491.0" prefHeight="35.0" prefWidth="200.0" promptText="Search With Id" />
      <Button layoutX="700.0" layoutY="640.0" mnemonicParsing="false" onAction="#btn_back_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #0062ff;" text="Back" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
