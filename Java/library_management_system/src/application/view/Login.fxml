<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <Pane layoutY="25.0" prefHeight="75.0" prefWidth="600.0" style="-fx-background-color: #93e8f5;">
         <children>
            <Label layoutX="263.0" layoutY="15.0" text="Login" textFill="#099638">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Label layoutX="100.0" layoutY="150.0" text="Email">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txt_name" layoutX="250.0" layoutY="150.0" prefHeight="35.0" prefWidth="250.0" promptText="example@gmail.com" />
      <Button layoutX="250.0" layoutY="350.0" mnemonicParsing="false" onAction="#btn_login_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #1e6102;" text="Login" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="100.0" layoutY="250.0" text="Password">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button layoutX="425.0" layoutY="350.0" mnemonicParsing="false" onAction="#btn_clear_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #e62020;" text="Clear" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="500.0" layoutY="440.0" mnemonicParsing="false" onAction="#btn_exit_click" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: #0062ff;" text="Exit" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <PasswordField fx:id="txt_password" layoutX="250.0" layoutY="250.0" prefHeight="35.0" prefWidth="250.0" promptText="password" />
   </children>
</AnchorPane>
