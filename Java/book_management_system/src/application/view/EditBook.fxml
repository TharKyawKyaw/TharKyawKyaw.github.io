<AnchorPane prefHeight="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.BookEditController">
   <children>
      <Label layoutX="125.0" layoutY="50.0" prefHeight="35.0" text="Enter Book Code">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txt_code" layoutX="300.0" layoutY="50.0" prefHeight="35.0" prefWidth="250.0" promptText="Code" />
      <Button layoutX="325.0" layoutY="100.0" mnemonicParsing="false" onAction="#btn_search_click" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #666633;" text="Search" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Label layoutX="125.0" layoutY="175.0" prefHeight="35.0" text="Book Title">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txt_title" layoutX="300.0" layoutY="175.0" prefHeight="35.0" prefWidth="250.0" promptText="Title" />
      <Label layoutX="125.0" layoutY="250.0" prefHeight="35.0" text="Book Price">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="txt_price" layoutX="300.0" layoutY="250.0" prefHeight="35.0" prefWidth="250.0" promptText="Price" />
      <Label layoutX="125.0" layoutY="325.0" prefHeight="35.0" text="Category">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="cbo_category" layoutX="300.0" layoutY="325.0" prefHeight="35.0" prefWidth="250.0" promptText="Category" />
      <Label layoutX="125.0" layoutY="400.0" prefHeight="35.0" text="Author">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="cbo_author" layoutX="300.0" layoutY="400.0" prefHeight="35.0" prefWidth="250.0" promptText="Author" />
      <Label layoutX="125.0" layoutY="475.0" prefHeight="35.0" text="Puclish Date">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <DatePicker fx:id="txt_publish" layoutX="300.0" layoutY="475.0" prefHeight="35.0" prefWidth="250.0" promptText="Publish Date" />
      <Button layoutX="325.0" layoutY="529.0" mnemonicParsing="false" onAction="#btn_update_click" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #ff9900;" text="Update" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button layoutX="571.0" layoutY="633.0" mnemonicParsing="false" onAction="#btn_back_click" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #1aa3ff;" text="Back" textFill="WHITE">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
